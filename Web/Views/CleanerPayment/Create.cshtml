@using Web.Models;
@model CleanerPaymentCreateViewModel

@{
    ViewBag.Title = "Cleaner Payment Create";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("_Info")

@using (Html.BeginForm("Create", "CleanerPayment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(a => a.ImageUpload, new { @class = "control-label" })
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.ImageUpload, new { @class = "form-control", type = "file", multiple = "multiple", accept = "image/jpeg,  image/jpg" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(a => a.Remark, new { @class = "control-label" })
        </div>
        <div class="col-md-3">
            @Html.TextAreaFor(a => a.Remark, new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 right">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-warning" href="@Url.Action("Index", "CleanerPayment")" role="button">Back</a>
        </div>
    </div>
}